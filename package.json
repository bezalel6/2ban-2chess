{
  "name": "2ban-2chess",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others --kill-others-on-fail -n \"NEXT,WS\" -c \"cyan,magenta\" \"npm run dev:next\" \"npm run dev:ws\"",
    "dev:win": "node scripts/dev-windows.js",
    "dev:next": "portio --mine 3000 && next dev",
    "dev:ws": "portio --mine 3001 && tsx watch server/ws-server.ts",
    "build": "next build && npm run build:ws",
    "build:ws": "node server/build.js",
    "start": "next start",
    "ws-server": "portio --mine 3001 && tsx server/ws-server.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "analyze": "npm run type-check && npm run lint",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:auth": "playwright test e2e/auth.spec.ts",
    "test:game": "playwright test e2e/game.spec.ts",
    "test:a11y": "playwright test e2e/accessibility.spec.ts",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "test:multiplayer": "playwright test e2e/multiplayer-flow.spec.ts --headed",
    "test:multiplayer:headless": "playwright test e2e/multiplayer-flow.spec.ts",
    "test:solo": "playwright test e2e/solo-game.spec.ts --headed",
    "test:solo:headless": "playwright test e2e/solo-game.spec.ts",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen http://localhost:3000",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx server/db/seed.ts"
  },
  "dependencies": {
    "@bezalel6/react-chessground": "^2.0.3",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/ioredis": "^4.28.10",
    "@types/pg": "^8.15.5",
    "ban-chess.ts": "^1.2.2",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "howler": "^2.2.4",
    "ioredis": "^5.7.0",
    "iron-session": "^8.0.4",
    "lucide-react": "^0.542.0",
    "nanoid": "^5.1.5",
    "next": "^15.5.2",
    "next-auth": "^4.24.11",
    "pg": "^8.16.3",
    "puppeteer": "^24.17.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-use-websocket": "^4.13.0",
    "server-only": "^0.0.1",
    "uuid": "^9.0.1",
    "ws": "^8.18.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@types/howler": "^2.2.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "nodemon": "^3.1.10",
    "playwright": "^1.55.0",
    "react-scan": "^0.4.3",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.7.0",
    "typescript": "^5"
  }
}
